{
  "name": "inline-source",
  "description": "Inline all flagged js, css, image source files",
  "version": "7.2.4",
  "main": "index.js",
  "module": "dist/index.js",
  "browser": "dist/index.js",
  "author": "popeindustries <alex@pope-industries.com>",
  "scripts": {
    "format": "prettier --write './{lib,test}/**/*.{js,json,css}'",
    "lint": "eslint './{lib,test}/**/*.js'",
    "test": "NODE_ENV=test mocha --reporter spec --bail",
    "build": "rollup -c",
    "esb": "esbuild index.js --main-fields=browser,module,main --format=esm --outdir=./dist/esbuild/"
  },
  "keywords": [
    "inline",
    "html",
    "js",
    "css",
    "svg"
  ],
  "dependencies": {
    "buffer": "^6.0.3",
    "csso": "^4.2.0",
    "htmlparser2": "^7.1.0",
    "superagent": "^6.1.0",
    "svgo": "^1.3.0",
    "terser": "^5.5.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-typescript": "^8.2.5",
    "chai": "^4.2.0",
    "esbuild": "^0.12.24",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "handlebars": "^4.7.6",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "memory-fs": "*",
    "mocha": "^8.2.1",
    "nock": "^13.0.5",
    "prettier": "^2.2.1",
    "rollup": "^2.56.3",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-svelte": "^7.1.0"
  },
  "engines": {
    "node": ">=8.3.0"
  },

  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 80,
    "singleQuote": true
  },
  "repository": "git://github.com/popeindustries/inline-source.git",
  "readmeFilename": "README.md",
  "license": "MIT"
}
